@using KhumaloCraft.Models
@{
    ViewData["Title"] = "MYWORK";
}

<style>
    /* Custom CSS for this page */
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-image: url('background.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-color: #f5f5dc; /* Beige */
        color: #4d3319; /* Dark Brown */
    }

    header {
        text-align: center;
        padding: 20px 0;
    }

    nav {
        text-align: center;
        padding: 10px 0;
    }

        nav a {
            text-decoration: none;
            color: #333; /* Dark gray color */
            padding: 0 20px;
        }

    section {
        padding: 20px;
        margin: 20px auto;
        width: 80%;
        border-radius: 10px;
    }

        section h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    footer {
        text-align: center;
        padding: 10px 0;
    }

</style>

<section id="products">
</section>

<div class="container">
    <div class="row">
        <!-- Database Products -->
        <h2 class="text-center mb-4"> Database Products</h2>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4 product-item" data-category="@product.Category">
                    <div class="card h-100 product-card">
                        <img src="@Url.Content(product.PicUrl)" alt="@product.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price</p>
                            @if (product.Availability)
                            {
                                <p class="card-text text-success">Available</p>
                            }
                            else
                            {
                                <p class="card-text text-danger">Unavailable</p>
                            }
                            <button class="btn btn-custom add-to-cart-btn" data-product-id="@product.ProductID">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }

            <h2>Featured Products</h2>
            <!-- Product 1 -->
            <div class="col-md-4 mb-4 product-item" data-category="Bag">
                <div class="card h-100 product-card">
                    <img src="~/IMG/PRODUCT1.PNG" class="card-img-top" alt="Product 1" onclick="addToCart('Bali rattan bag', 100.00)">
                    <div class="card-body">
                        <h5 class="card-title">Bali rattan bag</h5>
                        <p class="card-text">The Bali rattan bag is one item in particular that has reached global success.</p>
                        <p class="card-text">R100.00</p>
                    </div>
                </div>
            </div>

            <!-- Product 2 -->
            <div class="col-md-4 mb-4 product-item" data-category="Pot">
                <div class="card h-100 product-card">
                    <img src="~/IMG/PRODUCT2.PNG" class="card-img-top" alt="Product 2">
                    <div class="card-body">
                        <h5 class="card-title">ClayPot</h5>
                        <p class="card-text">A traditional vessel made from clay typically used for cooking, storing food, or displaying plants.</p>
                        <p class="card-text">R150.00</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
</div>

</div>
<!-- Add jQuery for filtering products by category -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        // Add to Cart button click event
        $('.add-to-cart-btn').click(function () {
            var productId = $(this).data('product-id');

            // Send AJAX request to add product to cart
            $.ajax({
                url: '/ShoppingCart/AddToCart', // Updated URL
                type: 'POST',
                contentType: 'application/json', // Added content type
                data: JSON.stringify({ productId: productId, quantity: 1 }),
                success: function (response) {
                    // Redirect to shopping cart page
                    window.location.href = '/ShoppingCart/Index';
                },
                error: function (xhr, status, error) {
                    // Display error message if request fails
                    console.error(xhr.responseText);
                }
            });
        });
    });
</script>



 





        
        
           

