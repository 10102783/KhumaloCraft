@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome to Khumalos Craft</title>
    <style>
        /* CSS styles with shades of brown */
        body {
            background-color: #f5f5dc; /* Beige */
            color: #f2e5bd; /* Dark Brown */
            font-family: Arial, sans-serif;
            background-image: url('/IMG/R.png');
        }

        h1 {
            color: #8b4513; /* Saddle Brown */
        }

        /* Section for mission, vision, and goals */
        .mission-vision-goals {
            margin-top: 20px;
            padding: 20px;
            background-color: #f2e5bd; /* Tan */
            border-radius: 10px;
        }

            .mission-vision-goals h2 {
                color: #8b4513; /* Saddle Brown */
            }

            .mission-vision-goals p {
                color: #8b4513; /* Dark Brown */
            }

            .mission-vision-goals ul {
                color: #8b4513; /* Dark Brown */
            }

        /* Popup message style */
        #popup-message {
            display: none;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 4px;
            margin-top: 20px;
        }

        /* Star rating styles */
        .rating {
            display: inline-block;
            unicode-bidi: bidi-override;
            direction: rtl;
        }

            .rating input {
                display: none;
            }

            .rating label {
                float: right;
                cursor: pointer;
                color: #aaa;
            }

                .rating label:before {
                    content: '★';
                    margin-right: 5px;
                    font-size: 30px;
                }

            .rating input:checked ~ label,
            .rating input:checked ~ label ~ label {
                color: #ffca08; /* Yellow */
            }

        /* Submit button style */
        #submit-rating-btn {
            background-color: #8b4513; /* Saddle Brown */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

            #submit-rating-btn:hover {
                background-color: #a0522d; /* Sienna */
            }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4"></h1>
        <h1>Welcome to Khumalos Craft</h1>
        <p>Discover unique handmade crafts from Khumalos Craft. Our collection features a variety of exquisite items crafted with care and attention to detail.</p>

        <!-- Mission, Vision, Goals Section -->
        <div class="mission-vision-goals">
            <h2>Our Mission</h2>
            <p>To bring joy and beauty into people's lives through our handcrafted creations.</p>

            <h2>Our Vision</h2>
            <p>To become a leading provider of high-quality handmade crafts, admired for our creativity, craftsmanship, and customer satisfaction.</p>

            <h2>Our Goals</h2>
            <ul>
                <li>Create unique and innovative designs that reflect the beauty of traditional craftsmanship.</li>
                <li>Deliver exceptional customer service and satisfaction.</li>
                <li>Expand our reach and presence in the market while maintaining our commitment to quality.</li>
                <li>Support and empower local artisans and communities.</li>
            </ul>
        </div>

        <!-- Star Rating Section -->
        <div class="rating">
            <input type="radio" id="star5" name="rating" value="5" />
            <label for="star5">5</label>
            <input type="radio" id="star4" name="rating" value="4" />
            <label for="star4">4</label>
            <input type="radio" id="star3" name="rating" value="3" />
            <label for="star3">3</label>
            <input type="radio" id="star2" name="rating" value="2" />
            <label for="star2">2</label>
            <input type="radio" id="star1" name="rating" value="1" />
            <label for="star1">1</label>
        </div>

        <!-- Button to Submit Rating -->
        <button id="submit-rating-btn">Submit Rating</button>

        <!-- Popup message -->
        <div id="popup-message"></div>

        <!-- Include jQuery -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <script>
            function showPopupMessage(message) {
                var popup = $("#popup-message");
                popup.text(message);
                popup.fadeIn().delay(3000).fadeOut();
            }

            $(document).ready(function () {
                $("#submit-rating-btn").click(function () {
                    var rating = $("input[name='rating']:checked").val();

                    // Perform AJAX submission or any other processing with the rating value
                    // For demonstration purposes, we're just showing a popup message
                    showPopupMessage("Thank you for rating!");
                });
            });
        </script>
    </div>
</body>
</html>
